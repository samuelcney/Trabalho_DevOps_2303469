{
  "dashboard": {
    "id": null,
    "title": "MariaDB Metrics",
    "tags": ["mariadb", "database"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "panels": [
      {
        "type": "graph",
        "title": "MariaDB Connections",
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected",
            "format": "time_series",
            "intervalFactor": 1,
            "legendFormat": "Connected Threads",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus",
        "xaxis": {
          "show": true
        },
        "yaxes": [
          {
            "format": "short",
            "show": true
          },
          {
            "show": true
          }
        ]
      },
      {
        "type": "graph",
        "title": "MariaDB Queries per Second",
        "targets": [
          {
            "expr": "rate(mysql_global_status_questions[1m])",
            "format": "time_series",
            "intervalFactor": 1,
            "legendFormat": "Queries per Second",
            "refId": "B"
          }
        ],
        "datasource": "Prometheus",
        "xaxis": {
          "show": true
        },
        "yaxes": [
          {
            "format": "short",
            "show": true
          },
          {
            "show": true
          }
        ]
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    }
  }
}

